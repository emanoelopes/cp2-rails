<h1>Listing pacientes</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Idade</th>
    <th>Descricao</th>
    <th>Inicio</th>
    <th>Dataatendimento</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pacientes.each do |paciente| %>
  <tr>
    <td><%= paciente.nome %></td>
    <td><%= paciente.idade %></td>
    <td><%= paciente.descricao %></td>
    <td><%= paciente.inicio %></td>
    <td><%= paciente.dataatendimento %></td>
    <td><%= link_to 'Show', paciente %></td>
    <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
    <td><%= link_to 'Destroy', paciente, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

