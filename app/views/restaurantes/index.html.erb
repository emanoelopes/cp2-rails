<h1>Listagem de Restaurantes</h1>

<table class="table table-striped">
  <thead>
  	<tr>
	  	<th>Nome</th>
	  	<th>EndereÃ§o</th>
  		<th>Especialidade</th>
  	</tr>
  </thead>
	<% @restaurantes.each do |restaurante| %>
		<tr>
			<td><%= restaurante.nome %></td>
			<td><%= restaurante.endereco %></td>
			<td><%= restaurante.especialidade %></td>
			<td>
				<%= button_to 'Mostrar', restaurante, method: :get, class: "btn btn-default" %>
			</td>
      <% if can? :update, @restaurante %>
			<td>
				<%= button_to 'Editar', edit_restaurante_path(restaurante), method: :get, class: "btn btn-default" %>
      </td>
      <td><%= button_to 'Apagar', restaurante, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger" %></td>
    <% end %>
		</tr>
	<%end%>
</table>

</br>
<% if can? :create, @restaurante %>
  <%= button_to 'Novo', new_restaurante_path, remote: true, method: :get, class: "btn btn-default" %>
<% end %>
