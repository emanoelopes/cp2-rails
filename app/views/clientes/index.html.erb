<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.idade %></td>
        <td><%= button_to 'Mostrar', cliente, method: :get, class: "btn btn-default"  %></td>
        <td><%= button_to 'Editar', edit_cliente_path(cliente), method: :get, class: "btn btn-default"  %></td>
        <td><%= button_to 'Apagar', cliente, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, @restaurante %>
<%= button_to 'Novo Cliente', new_cliente_path, remote: true, method: :get, class: "btn btn-primary"  %>
<% end %>
