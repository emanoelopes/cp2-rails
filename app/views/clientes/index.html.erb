<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.idade %></td>
        <td><%= button_to 'Mostrar', cliente, method: :get  %></td>
        <td><%= button_to 'Editar', edit_cliente_path(cliente), method: :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Novo Cliente', new_cliente_path, remote: true, method: :get %>
