<p id="notice"><%= notice %></p>

<h1>Listing Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.idade %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<b>Clientes (Guide Rails)</b>
 
<ul id="clientes">
<%= render @clientes %>
</ul>
 
<br>

<%= form_for(@cliente, remote: true) do |f| %>
  <%= f.label :nome %><br>
  <%= f.text_field :nome %><br> 
  <%= f.submit %>
<% end %>
<%= link_to 'Novo Cliente', "#novo_cliente_modal", :class=> "fancybox" %>

