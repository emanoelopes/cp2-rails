<p id="notice"><%= notice %></p>

<h1>Qualificações</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Restaurante</th>
      <th>Nota</th>
      <th>Valor gasto</th>
      <!-- <th colspan="3", align="center">Opções</th> -->
    </tr>
  </thead>

  <tbody>
    <% @qualificacoes.each do |qualificacao| %>
      <tr>
        <td><%= qualificacao.cliente.nome %></td>
        <td><%= qualificacao.restaurante.nome %></td>
        <td><%= qualificacao.nota %></td>
        <td><%= valor_formatado(qualificacao.valor_gasto) %></td>
        <td><%= button_to 'Mostrar', qualificacao, method: :get, class: "btn btn-default"  %></td>
        <td><%= button_to 'Editar', edit_qualificacao_path(qualificacao), method: :get, class: "btn btn-default" %></td>
        <% if can? :destroy, @qualificacao %>
          <td><%= button_to 'Remover', qualificacao, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger" %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Nova Qualificação', new_qualificacao_path, remote: true, method: :get, class: "btn btn-primary" %>
