<p id="notice"><%= notice %></p>

<h1>Comentários</h1>

<table>
  <thead>
    <tr>
      <th>Conteudo</th>
      <th>Comentavel</th>
      <th>Comentavel type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comentarios.each do |comentario| %>
      <tr>
        <td><%= comentario.conteudo %></td>
        <td><%= comentario.comentavel_id %></td>
        <td><%= comentario.comentavel_type %></td>
        <td><%= button_to 'Mostrar', comentario, method: :get %></td>
        <td><%= button_to 'Editar', edit_comentario_path(comentario), method: :get %></td>
        <td><%= button_to 'Apagar', comentario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Comentário', new_comentario_path %>
